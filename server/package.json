{
  "name": "solo-callme",
  "version": "1.0.6",
  "description": "MCP server that lets Claude Code call you on the phone",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "solo-callme": "./src/index.ts"
  },
  "files": [
    "src/**/*",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prestart": "bun install --silent",
    "start": "bun run src/index.ts",
    "start:sse": "bun run src/index-sse.ts",
    "dev": "bun --watch src/index.ts",
    "dev:sse": "bun --watch src/index-sse.ts",
    "release": "npm run release:patch",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "phone",
    "voice",
    "telnyx",
    "anthropic",
    "ai"
  ],
  "author": "SoLoVisionLLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoLoVisionLLC/SoLo-CallMe.git"
  },
  "homepage": "https://github.com/SoLoVisionLLC/SoLo-CallMe#readme",
  "bugs": {
    "url": "https://github.com/SoLoVisionLLC/SoLo-CallMe/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@ngrok/ngrok": "^1.4.1",
    "openai": "^4.77.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.13",
    "bun-types": "latest"
  }
}
